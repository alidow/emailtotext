# App Config
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Sentry Error Monitoring
# Get your DSN from: Settings > Client Keys (DSN)
NEXT_PUBLIC_SENTRY_DSN=https://YOUR_KEY@YOUR_ORG.ingest.sentry.io/YOUR_PROJECT_ID

# Your organization slug from the Sentry URL
SENTRY_ORG=your-org-slug

# Your project name in Sentry
SENTRY_PROJECT=emailtotext

# Auth token for uploading source maps (create in Settings > Account > API > Auth Tokens)
# Needs scopes: project:releases, org:read, project:write
SENTRY_AUTH_TOKEN=sntrys_YOUR_AUTH_TOKEN

# Optional: Set environment
SENTRY_ENVIRONMENT=production

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Rate Limiting (Upstash Redis)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Cloudflare Turnstile (CAPTCHA)
